                    <ImageBrush ImageSource="/3.png" Stretch="Fill"/>
                </Border.Background>

            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Border.Background>
                    <ImageBrush ImageSource="/4.png" Stretch="Fill"/>
                </Border.Background>

            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Border.Background>
                    <ImageBrush ImageSource="/5.jpg" Stretch="Fill"/>
                </Border.Background>

            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Border.Background>
                    <ImageBrush ImageSource="/6.jpg" Stretch="Fill"/>
                </Border.Background>

            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Border.Background>
                    <ImageBrush ImageSource="/7.jpg" Stretch="Fill"/>
                </Border.Background>

            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Border.Background>
                    <ImageBrush ImageSource="/8.jpg" Stretch="Fill"/>
                </Border.Background>

            </Border>

        </WrapPanel>

    </Border>

</Window>
