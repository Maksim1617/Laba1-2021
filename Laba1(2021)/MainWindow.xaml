<Window x:Class="Laba1_2021_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba1_2021_"
        mc:Ignorable="d"
        Title="TV програми" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" HorizontalContentAlignment="Left">
    
    <Border BorderBrush="Navy" Background="Lavender" BorderThickness="2" Name="border1" Margin="20" >

